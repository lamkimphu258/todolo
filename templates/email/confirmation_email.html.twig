<!doctype html>
{% apply inline_css(source('@styles/email.css')) %}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>{{ email.subject }}</title>
</head>
<body>
<div class="text-center">
    <a href="{{ url('app_home') }}">
        <img style="width: 300px; height: 300px;" src="{{ email.image('@images/email/logo.svg') }}" alt="">
    </a>
    <h1>Welcome to Todolo</h1>
    <p>Hello {{ email.toName }}</p>
    <p>I am very happy to welcome you to Todolo. Wish the best to you.</p>
    <a href="{{ signedUrl }}">Verify my account</a>
</div>
</body>
</html>
{% endapply %}
